<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anxu.smarthomeunity.mapper.UserMapper">
<!--    用户注册 -->
    <insert id="insert">
        insert into user_info (username,password,email,gender,signature,create_time)
        values (#{username},#{password},#{email},#{gender},#{signature},#{createTime})
    </insert>
<!--    根据用户名查询用户信息 -->
    <select id="queryByUsername" resultType="com.anxu.smarthomeunity.pojo.user.UserInfo">
        select * from user_info where username = #{username}
    </select>
</mapper>
